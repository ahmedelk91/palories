<h1>History</h1>
<%= link_to 'New day', new_day_path %>

<table>
  <tr>
    <th>Date</th>
    <th>Total Calories</th>
    <th colspan="3"></th>
  </tr>

  <% @day.each do |day| %>
  <tr>
    <td><%= day.date %></td>
    <td><%= day.total_calories %></td>
    <td><%= link_to 'Show', day_path(day) %></td>
    <td><%= link_to 'Edit', edit_day_path(day) %></td>
    <td><%= link_to 'Delete', day_path(day),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <% end %>
</table>
