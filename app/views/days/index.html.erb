<% if !current_user %>
<%= link_to "Sign up", new_user_registration_path %>
<%= link_to "Sign in", new_user_session_path %>
<% else %>
<%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
<%= current_user.email %>
<% end %>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<div class="navbar navbar-static-top">
<div class="col-sm-4" id="green">Palories</div>
<div class="col-sm-4" id="yellow">Palories</div>
<div class="col-sm-4" id="red">Palories</div>
</div>

<div id="display">
    <% @days.each do |day| %>
      <h1>Date<a href="/days/new">(+)</a></h1>
      <h2><%= day.date %></h2>
      <h1>Total Calories<h1>
      <h2 id="grand_total"><%= day.total_calories%></h2>

<p>
    <button type="button" class="btn btn-primary"><%= link_to 'Show', day_path(day) %></button>
    <button type="button" class="btn btn-primary"><%= link_to 'Edit', edit_day_path(day) %></button>
    <button type="button" class="btn btn-danger"><%= link_to 'Delete', day_path(day),
      method: :delete,
      data: { confirm: 'Are you sure?' } %></button>
</p>
    <% end %>
</div>
