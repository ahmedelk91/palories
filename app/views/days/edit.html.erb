<h1>Edit Day</h1>

<%= form_for :day, url: day_path(@day), method: :patch do |f| %>

<% if @day.errors.any? %>
<div id="error_explanation">
<h2>
  <%= pluarlize(@day.errors.count, "error") %> prohibited this article from being saved:
</h2>
<ul>
  <% @day.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
</div>
<% end %>

<p>
<%= f.label :date %><br>
<%= f.text_field :date %>
</p>

<p>
<%= f.label :total_calories %><br>
<%= f.text_field :total_calories %>
</p>

<p>
<%= f.submit %>
</p>
<% end %>
