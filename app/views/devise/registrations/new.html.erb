<h2 id="centerTextLogIn">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
<%= devise_error_messages! %>

<div class="form-group">
  <%= f.label :email, class: "col-sm-3 control-label" %><br />
  <div class="col-sm-6">
    <%= f.email_field :email, class: "form-control", autofocus: true %>
  </div>
</div>

<div class="form-group">
  <%= f.label :password, class: "col-sm-3 control-label" %>
  <% if @minimum_password_length %>
  <em><span style="font-size: 15px; font-family: Verdana;">(<%= @minimum_password_length %> characters minimum)</span></em>
  <% end %><br />
  <div class="col-sm-6">
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :password_confirmation, class: "col-sm-3 control-label" %><br />
  <div class="col-sm-6">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-3 col-sm-6">
    <%= f.submit "Sign up", class: "btn btn-primary" %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-3 col-sm-6">
    <div class="btn btn-primary">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-3 col-sm-6">
    <div class="btn btn-primary">
      <%= link_to 'Back', root_path %>
    </div>
  </div>
</div>

<% end %>
